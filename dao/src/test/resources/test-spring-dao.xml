<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:test-spring-db.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:sql-queries.properties</value>
                <value>classpath:test-database.properties</value>
            </list>
        </property>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="userDao" class="com.exchange.dao.jdbc.UserDaoImpl">
        <constructor-arg ref="jdbcTemplate" index="0"/>
        <constructor-arg ref="namedParameterJdbcTemplate" index="1"/>
        <constructor-arg ref="userRowMapper" index="2"/>
    </bean>

    <bean id="fileDao" class="com.exchange.dao.jdbc.FileDaoImpl">
        <constructor-arg ref="jdbcTemplate" index="0"/>
        <constructor-arg ref="namedParameterJdbcTemplate" index="1"/>
        <constructor-arg ref="fileRowMapper" index="2"/>
    </bean>

    <bean id="categoryDao" class="com.exchange.dao.jdbc.CategoryDaoImpl">
        <constructor-arg ref="jdbcTemplate" index="0"/>
        <constructor-arg ref="namedParameterJdbcTemplate" index="1"/>
        <constructor-arg ref="categoryRowMapper" index="2"/>
    </bean>

    <bean id="userRowMapper" class="com.exchange.dao.jdbc.mapper.UserRowMapper"/>
    <bean id="fileRowMapper" class="com.exchange.dao.jdbc.mapper.FileRowMapper"/>
    <bean id="categoryRowMapper" class="com.exchange.dao.jdbc.mapper.CategoryRowMapper"/>

</beans>